<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerv_view"
        android:layout_marginTop="50dp"
        app1:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/emoji"
        android:layout_below="@+id/recyclerv_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app1:layout_constraintTop_toBottomOf="@+id/recyclerv_view"
        app1:layout_constraintStart_toStartOf="parent"/>
    <ss.com.toolkit.view.HeadViewWithFrame
        android:id="@+id/headview"
        app1:layout_constraintTop_toBottomOf="@+id/emoji"
        android:layout_marginTop="10dp"
        app1:layout_constraintStart_toStartOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</android.support.constraint.ConstraintLayout>